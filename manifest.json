{
  "manifest_version": 3,
  "name": "API Authorization Tracker",
  "version": "1.0",
  "description": "Tracks the Authorize field in API request headers.",
  "permissions": ["webRequest", "webRequestBlocking", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["https://discord.com/api*"]
}
